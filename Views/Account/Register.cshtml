@model DigitalPortfolio.ViewModels.RegisterViewModel;
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img class="img-fluid" src="~/icons/portfolio_vmbi5dtnrw2u_512.png" width="256">
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-controller="Account" asp-action="Register">
                    <div class="mb-3">
                        <label class="form-label" asp-for="UserName"></label>
                        <div class="input-group has-validation">
                            <span class="input-group-text">&#64;</span>
                            <input type="text" class="form-control" asp-for="UserName" placeholder="Введите имя пользователя">
                        </div>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="EmailAddress"></label>
                        <input type="email" class="form-control" asp-for="EmailAddress" placeholder="Введите Email">
                        <span class="text-danger" asp-validation-for="EmailAddress"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="PhoneNumber"></label>
                        <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Введите номер телефона">
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Password"></label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Введите пароль">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="PasswordConfirm"></label>
                        <input type="password" class="form-control" asp-for="PasswordConfirm" placeholder="Подтвердите пароль">
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <input type="submit" class="btn btn-primary" value="Зарегистрироваться">
                </form>
            </div>
        </div>
    </div>
</div>